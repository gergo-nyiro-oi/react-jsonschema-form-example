{
    "properties": {
        "active": {
            "description": "Indicates whether the login method is enabled or not.",
            "type": "boolean"
        },
        "authentication_protocol": {
            "description": "RADIUS authentication protocol",
            "enum": [
                "chap",
                "pap"
            ],
            "type": "string"
        },
        "groups": {
            "anyOf": [
                {
                    "properties": {
                        "type": {
                            "description": "The type discriminator field",
                            "type": "string"
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "type": "object"
                },
                {
                    "properties": {
                        "ldap_server": {
                            "properties": {
                                "key": {
                                    "type": "string"
                                },
                                "meta": {
                                    "properties": {
                                        "href": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "href"
                                    ],
                                    "type": "object"
                                }
                            },
                            "required": [
                                "key",
                                "meta"
                            ],
                            "type": "object"
                        },
                        "type": {
                            "description": "The type discriminator field",
                            "type": "string"
                        }
                    },
                    "required": [
                        "ldap_server",
                        "type"
                    ],
                    "type": "object"
                }
            ],
            "description": "The provider of group information which is used for authorizing acess.",
            "discriminator": {
                "mapping": {
                    "ldap": {
                        "properties": {
                            "ldap_server": {
                                "properties": {
                                    "key": {
                                        "type": "string"
                                    },
                                    "meta": {
                                        "properties": {
                                            "href": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "href"
                                        ],
                                        "type": "object"
                                    }
                                },
                                "required": [
                                    "key",
                                    "meta"
                                ],
                                "type": "object"
                            },
                            "type": {
                                "description": "The type discriminator field",
                                "type": "string"
                            }
                        },
                        "required": [
                            "ldap_server",
                            "type"
                        ],
                        "type": "object"
                    },
                    "local": {
                        "properties": {
                            "type": {
                                "description": "The type discriminator field",
                                "type": "string"
                            }
                        },
                        "required": [
                            "type"
                        ],
                        "type": "object"
                    }
                },
                "propertyName": "type"
            }
        },
        "name": {
            "description": "A unique identifier of the login method.",
            "pattern": "^([a-zA-Z0-9\\-_\\.]{1,4096})$",
            "type": "string"
        },
        "servers": {
            "items": {
                "properties": {
                    "address": {
                        "anyOf": [
                            {
                                "properties": {
                                    "selection": {
                                        "type": "string"
                                    },
                                    "value": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "selection",
                                    "value"
                                ],
                                "type": "object"
                            },
                            {
                                "properties": {
                                    "selection": {
                                        "type": "string"
                                    },
                                    "value": {
                                        "pattern": "^(([a-z0-9\\-]+)(\\.([a-z0-9\\-]+))*)$",
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "selection",
                                    "value"
                                ],
                                "type": "object"
                            }
                        ],
                        "description": "Defines the address of a RADIUS server. Possible values are:\n* ip\n  The value element contains the IP of the RADIUS server.\n* fqdn\n  The value element contains the FQDN of the RADIUS server.\n",
                        "discriminator": {
                            "mapping": {
                                "fqdn": {
                                    "properties": {
                                        "selection": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "pattern": "^(([a-z0-9\\-]+)(\\.([a-z0-9\\-]+))*)$",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "selection",
                                        "value"
                                    ],
                                    "type": "object"
                                },
                                "ip": {
                                    "properties": {
                                        "selection": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "selection",
                                        "value"
                                    ],
                                    "type": "object"
                                }
                            },
                            "propertyName": "selection"
                        }
                    },
                    "port": {
                        "description": "The port number of the RADIUS server.",
                        "maximum": 65535,
                        "minimum": 1,
                        "type": "integer"
                    },
                    "shared_secret": {
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "meta": {
                                "properties": {
                                    "href": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "href"
                                ],
                                "type": "object"
                            }
                        },
                        "required": [
                            "key",
                            "meta"
                        ],
                        "type": "object"
                    }
                },
                "required": [
                    "address",
                    "port",
                    "shared_secret"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "title": {
            "description": "The title that appears above the login method button on the SPS web interface. This can be customized.",
            "pattern": "^(.+)$",
            "type": "string"
        },
        "type": {
            "description": "The type discriminator field",
            "type": "string"
        }
    },
    "required": [
        "active",
        "authentication_protocol",
        "groups",
        "name",
        "servers",
        "title",
        "type"
    ],
    "type": "object"
}
